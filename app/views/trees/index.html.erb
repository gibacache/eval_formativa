<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @trees.each do |tree| %>
        <tr>
          <td><%= tree.id %></td>
          <td><%= link_to '<i class="fa fa-eye"></i> Ver ejemplo'.html_safe, tree %></td>
          <td><%= link_to '<i class="fa fa-pencil"></i> Editar árbol'.html_safe, edit_tree_path(tree) %></td>
          <td><%= link_to '<i class="fa fa-trash-o"></i> Eliminar'.html_safe, tree, method: :delete, data: { confirm: '¿Seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to '+ Crear nuevo árbol', new_tree_path, class: 'btn btn-default' %>
